<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auto.mapper.RefundReturnMapper">

    <resultMap type="RefundReturn" id="RefundReturnResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="type"    column="type"    />
        <result property="reason"    column="reason"    />
        <result property="amount"    column="amount"    />
        <result property="evidence"    column="evidence"    />
        <result property="status"    column="status"    />
        <result property="adminRemark"    column="admin_remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectRefundReturnVo">
        select id, order_id, user_id, type, reason, amount, evidence, status, admin_remark, create_time, update_time
        from refund_return
    </sql>

    <select id="selectRefundReturnList" parameterType="RefundReturn" resultMap="RefundReturnResult">
        <include refid="selectRefundReturnVo"/>
        <where>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectRefundReturnListByOrderId" parameterType="Long" resultMap="RefundReturnResult">
        <include refid="selectRefundReturnVo"/>
        where order_id = #{orderId}
        order by create_time desc
    </select>

    <select id="selectRefundReturnListByUserId" parameterType="Long" resultMap="RefundReturnResult">
        <include refid="selectRefundReturnVo"/>
        where user_id = #{userId}
        order by create_time desc
    </select>

    <select id="selectRefundReturnById" parameterType="Long" resultMap="RefundReturnResult">
        <include refid="selectRefundReturnVo"/>
        where id = #{id}
    </select>

    <insert id="insertRefundReturn" parameterType="RefundReturn" useGeneratedKeys="true" keyProperty="id">
        insert into refund_return
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="type != null">type,</if>
            <if test="reason != null and reason != ''">reason,</if>
            <if test="amount != null">amount,</if>
            <if test="evidence != null and evidence != ''">evidence,</if>
            <if test="status != null">status,</if>
            <if test="adminRemark != null and adminRemark != ''">admin_remark,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="type != null">#{type},</if>
            <if test="reason != null and reason != ''">#{reason},</if>
            <if test="amount != null">#{amount},</if>
            <if test="evidence != null and evidence != ''">#{evidence},</if>
            <if test="status != null">#{status},</if>
            <if test="adminRemark != null and adminRemark != ''">#{adminRemark},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateRefundReturn" parameterType="RefundReturn">
        update refund_return
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="reason != null and reason != ''">reason = #{reason},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="evidence != null and evidence != ''">evidence = #{evidence},</if>
            <if test="status != null">status = #{status},</if>
            <if test="adminRemark != null and adminRemark != ''">admin_remark = #{adminRemark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRefundReturnById" parameterType="Long">
        delete from refund_return where id = #{id}
    </delete>

    <delete id="deleteRefundReturnByIds" parameterType="String">
        delete from refund_return where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
