<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auto.mapper.OrderProductMapper">

    <resultMap type="OrderProduct" id="OrderProductResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="productId"    column="product_id"    />
        <result property="productName"    column="product_name"    />
        <result property="productImage"    column="product_image"    />
        <result property="productSpec"    column="product_spec"    />
        <result property="price"    column="price"    />
        <result property="quantity"    column="quantity"    />
        <result property="totalPrice"    column="total_price"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectOrderProductVo">
        select id, order_id, product_id, product_name, product_image, product_spec,
               price, quantity, total_price, create_time, update_time
        from order_product
    </sql>

    <select id="selectOrderProductList" parameterType="OrderProduct" resultMap="OrderProductResult">
        <include refid="selectOrderProductVo"/>
        <where>
            <if test="orderId != null">
                and order_id = #{orderId}
            </if>
            <if test="productId != null">
                and product_id = #{productId}
            </if>
        </where>
        order by id
    </select>

    <select id="selectOrderProductListByOrderId" parameterType="Long" resultMap="OrderProductResult">
        <include refid="selectOrderProductVo"/>
        where order_id = #{orderId}
        order by id
    </select>

    <select id="selectOrderProductById" parameterType="Long" resultMap="OrderProductResult">
        <include refid="selectOrderProductVo"/>
        where id = #{id}
    </select>

    <insert id="insertOrderProduct" parameterType="OrderProduct" useGeneratedKeys="true" keyProperty="id">
        insert into order_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="productName != null and productName != ''">product_name,</if>
            <if test="productImage != null and productImage != ''">product_image,</if>
            <if test="productSpec != null and productSpec != ''">product_spec,</if>
            <if test="price != null">price,</if>
            <if test="quantity != null">quantity,</if>
            <if test="totalPrice != null">total_price,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="productName != null and productName != ''">#{productName},</if>
            <if test="productImage != null and productImage != ''">#{productImage},</if>
            <if test="productSpec != null and productSpec != ''">#{productSpec},</if>
            <if test="price != null">#{price},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="totalPrice != null">#{totalPrice},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <insert id="insertOrderProductBatch" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        insert into order_product
        (order_id, product_id, product_name, product_image, product_spec, price, quantity, total_price, create_time, update_time)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.orderId}, #{item.productId}, #{item.productName}, #{item.productImage}, #{item.productSpec},
             #{item.price}, #{item.quantity}, #{item.totalPrice}, #{item.createTime}, #{item.updateTime})
        </foreach>
    </insert>

    <update id="updateOrderProduct" parameterType="OrderProduct">
        update order_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="productName != null and productName != ''">product_name = #{productName},</if>
            <if test="productImage != null and productImage != ''">product_image = #{productImage},</if>
            <if test="productSpec != null and productSpec != ''">product_spec = #{productSpec},</if>
            <if test="price != null">price = #{price},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="totalPrice != null">total_price = #{totalPrice},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOrderProductById" parameterType="Long">
        delete from order_product where id = #{id}
    </delete>

    <delete id="deleteOrderProductByIds" parameterType="String">
        delete from order_product where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteOrderProductByOrderId" parameterType="Long">
        delete from order_product where order_id = #{orderId}
    </delete>

</mapper>
