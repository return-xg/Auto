<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auto.mapper.FavoriteMapper">

    <resultMap type="com.auto.domain.Favorite" id="FavoriteResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="productId"    column="product_id"    />
        <result property="createTime"    column="create_time"    />
        <association property="product" javaType="com.auto.domain.Product">
            <result property="id" column="product_id" />
            <result property="name" column="product_name" />
            <result property="brand" column="product_brand" />
            <result property="mainImage" column="product_main_image" />
            <result property="price" column="product_price" />
            <result property="stock" column="product_stock" />
            <result property="sales" column="product_sales" />
            <result property="status" column="product_status" />
        </association>
    </resultMap>

    <sql id="selectFavoriteVo">
        select id, user_id, product_id, create_time from favorite
    </sql>

    <select id="selectFavoriteList" parameterType="Favorite" resultMap="FavoriteResult">
        select f.id, f.user_id, f.product_id, f.create_time,
               p.name as product_name, p.brand as product_brand, p.main_image as product_main_image,
               p.price as product_price, p.stock as product_stock, p.sales as product_sales, p.status as product_status
        from favorite f
        left join product p on f.product_id = p.id
        <where>
            <if test="userId != null">
                and f.user_id = #{userId}
            </if>
            <if test="productId != null">
                and f.product_id = #{productId}
            </if>
        </where>
        order by f.create_time desc
    </select>

    <select id="selectFavoriteByUserAndProduct" resultMap="FavoriteResult">
        <include refid="selectFavoriteVo"/>
        where user_id = #{userId} and product_id = #{productId}
        limit 1
    </select>

    <insert id="insertFavorite" parameterType="Favorite" useGeneratedKeys="true" keyProperty="id">
        insert into favorite
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <delete id="deleteFavoriteById" parameterType="Long">
        delete from favorite where id = #{id}
    </delete>

    <delete id="deleteFavoriteByUserAndProduct">
        delete from favorite where user_id = #{userId} and product_id = #{productId}
    </delete>

</mapper>
